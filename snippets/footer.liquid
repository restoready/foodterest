<div class="footer__social">
  <ul class="social__items">
    {% if restaurant.phone? %}
    <li class="social__item social__item--phone">
      <a class="social__link" href="tel:{{ restaurant.phone_uri }}">
        <i class="icon icon-phone"></i>
        <span class="social__label">{{ restaurant.phone }}</span>
      </a>
    </li>
    {% endif %}
    {% if restaurant.email? %}
      <li class="social__item">
        <a class="social__link" href="mailto:{{restaurant.email}}">
          <i class="icon icon-envelop"></i>
          <span class="social__label">{{ "Envoyer un email" | t }}</span>
        </a>
      </li>
    {% endif %}
    <li class="social__item social__item--newsletter">
      <a class="social__link">
        <i class="icon icon-newsletter"></i>
        <span class="social__label">{{ "Notre newsletter" }}</span>
      </a>
    </li>
    {% if restaurant.facebook_url? %}
      <li class="social__item">
        <a class="social__link" href="{{restaurant.facebook_url}}">
          <i class="icon icon-facebook"></i>
          <span class="social__label">{{ "Notre page Facebook" | t }}</span>
        </a>
      </li>
    {% endif %}
    {% if restaurant.twitter_url? %}
      <li class="social__item">
        <a class="social__link" href="{{restaurant.twitter_url}}">
          <i class="icon icon-twitter"></i>
          <span class="social__label">{{ "Notre compte Twitter" | t }}</span>
        </a>
      </li>
    {% endif %}
    {% if restaurant.tripadvisor_url? %}
      <li class="social__item">
        <a class="social__link" href="{{restaurant.tripadvisor_url}}">
          <i class="icon icon-tripadvisor"></i>
          <span class="social__label">{{ "Notre page TripAdvisor" | t }}</span>
        </a>
      </li>
    {% endif %}
  </ul>
  {% if theme_settings.display_newsletter %}
  <div class="section__subscribe section__subscribe--layout" id="section__subscribe--layout-ajax">
    <div class="section__subscribe-triangle"></div>
    {% newsletter_subscribe_form %}
      <fieldset class="field-group">
        <div class="input input--layout">
          <input id="subscriberEmail" name="subscriber[email]" type="email" placeholder="{{ 'Inscrivez-vous Ã  notre newsletter' | t }}" required>
        </div>
        <div class="submit submit--layout">
          <button class="button submit-newsletter" type="button">
            <i class="icon-check"></i> {{ "Valider" | t }}
          </button>
        </div>
      </fieldset>
    {% endnewsletter_subscribe_form %}
    <div class="subscribe__message"></div>
  </div>
{% endif %}
</div>
