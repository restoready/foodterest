<div class="restaurant-main-image">
  <div class="restaurant-name">
    <a class="restaurant-name__link" href="{{ localized_root_path }}">
      {{ restaurant.name }}
    </a>
    {% if restaurant.slogan? %}
      <div class="slogan">
        {{ restaurant.slogan }}
      </div>
    {% endif %}
    {% if restaurant.phone? %}
      <div class="phone-number">
        <a class="phone-number__link" href="tel:{{ restaurant.phone_uri }}">
          <i class="icon-phone"></i> <span class="phone-number__label">{{ restaurant.phone }}</span>
        </a>
      </div>
    {% endif %}
  </div>
</div>

{% if home_menus.size > 0 or if home_foods.size > 0 %}
  <section class="featured">
    <main class="section__main" id="container">
      {% for menu in home_menus %}
        {% if menu.parent? %}
          <a href="{{ menu.root_parent.url }}#menu-{{menu.id}}">
        {% else %}
          <a href="{{ menu.url }}">
        {% endif %}
          <div class="item">
            <h6 class="menu-tag">Menu</h6>
            <div class="item-content">
              <h3 class="menu__title">{{ menu.name }}</h3>
              {% if menu.main_image? %}
                <img src="{{ menu.main_image | custom_image_url: "100x100#" }}" alt="menu" class="featured__menu-image">
              {% endif %}
            </div>
          </div>
        </a>
      {% endfor %}
      {% for food in home_foods %}
        {% assign relative_menu = food.menu %}
        <a href="{% if relative_menu.parent? %}{{ relative_menu.root_parent.url }}#menu-{{relative_menu.id}}{% else %}{{ relative_menu.url }}{% endif %}">
          {% include 'food' with food:food %}
        </a>
      {% endfor %}
      <div class="item see-all-menus">
        <div class="item-content">
          <img src="{{ 'see-all-menus.jpg' | asset_url | custom_image_url: "100x100#" }}" alt="all-menus">
          <a href="{{ restaurant.menus_path }}">
            {{ "Voir toute la carte" | t }}
          </a>
        </div>
      </div>
    </main>
  </section>
{% endif %}

<div class="wrapper">
  <section class="opening-hours">
    <header class="section__header">
      <h2 class="section__title">{{ "Horaires" | t }}</h2>
    </header>
    <main class="section__main">
      <dl class="opening-days">
      {% for day in opening_hours %}
        <dt class="opening-day">
          {{ day.name }}
        </dt>
        <dd class="opening-shifts">
          {{ day.shifts }}
        </dd>
      {% endfor %}
      </dl>
    {% if restaurant.opening_hours_information? %}
      <div class="opening-hours__information">
        <p>{{ restaurant.opening_hours_information }}</p>
      </div>
    {% endif %}
    </main>
  </section>

  <section class="directions">
    <header class="section__header">
      <h2 class="section__title">{{ "Localisation" | t }}</h2>
    </header>
    <main class="section__main">
      {% if theme_settings.google_map_type != "" %}
        <div class="map">
          {% if theme_settings.google_map_type == "embed" %}
            {% google_map_embed: "size:100%x320" %}
          {% elsif theme_settings.google_map_type == "image" %}
            <a class="map__link" href="{% google_map_url %}">
              <img class="map__image" src="{% google_map_image_url: "size:640x320" %}" />
            </a>
          {% endif %}
        </div>
      {% endif %}
      {% if restaurant.street_address? || restaurant.zip_code? || restaurant.city? %}
      <div class="address">
        <p>
          {% if restaurant.street_address? %}
            {{ restaurant.street_address }}
            <br />
          {% endif %}
          {% if restaurant.zip_code? %} {{ restaurant.zip_code }} {% endif %}
          {% if restaurant.city? %} <strong>{{ restaurant.city }}</strong> {% endif %}
        </p>
      </div>
      {% endif %}
    </main>
    <footer class="section__footer directions__footer">
      <p>
        <a class="button" href="{% google_map_url %}">
          {{ "Voir l'itin√©raire" | t }}
        </a>
      </p>
    </footer>
  </section>
</div>
