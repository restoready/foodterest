<section class="page-header page-header--menu">
  <div class="breadcrumb">
    <ul class="menus-wrapper">
      <li class="menus" style="{% if restaurant.main_image? %}background:url('{{ restaurant.main_image | custom_image_url: '200x200#' }}');background-size:cover;{% endif %}">
        <div class="menus-overlay"></div>
        <a href="{{ restaurant.menus_path }}" class="menus__menu-link">
          <div class="section__header menus__header">
              <h2 class="section__title">
                {{ "Toute la carte" | t }}
              </h2>
          </div>
        </a>
      </li>
      {% if menu.parent? %}
        {% for ancestor in menu.ancestors %}
          <li class="menus" style="{% if ancestor.main_image? %}background:url('{{ ancestor.main_image | custom_image_url: '200x200#' }}');background-size:cover;{% endif %}">
            <div class="menus-overlay"></div>
            <a href="{{ ancestor.url }}" class="menus__menu-link">
              <div class="section__header menus__header">
                  <h2 class="section__title">
                    {{ ancestor.name }}
                  </h2>
              </div>
            </a>
          </li>
        {% endfor %}
      {% endif %}
    </ul>
    {% if theme_settings.display_newsletter %}
      <div class="section__subscribe">
        {% newsletter_subscribe_form %}
          <fieldset class="field-group">
            <div class="input">
              <input id="subscriberEmail" name="subscriber[email]" type="email" placeholder="{{ "Inscrivez-vous Ã  notre newsletter&nbsp;" | t }}" required>
            </div>
            <div class="submit">
              <button class="button submit-newsletter" type="submit">
                <i class="icon-check"></i> {{ "Valider" | t }}
              </button>
            </div>
          </fieldset>
        {% endnewsletter_subscribe_form %}
      </div>
    {% endif %}
  </div>
  <header class="section__header page-header__header">
    <h1 class="section__title page-header__title">{{ menu.name }}</h1>
    {% if menu.children? %}
      <ul class="menus-wrapper">
        {% for child in menu.children %}
          <li class="menus" style="{% if child.main_image? %}background:url('{{ child.main_image | custom_image_url: '200x200#' }}');background-size:cover;{% endif %}">
            <div class="menus-overlay"></div>
            <a href="{{ child.url }}" class="menus__menu-link">
              <div class="section__header menus__header">
                <h2 class="section__title">
                  {{ child.name }}
                </h2>
              </div>
            </a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </header>
  {% if menu.summary? %}
    <main class="section__main page-header__description">
      {{ menu.summary }}
    </main>
  {% endif %}
</section>
<section class="section__main container">
  {% if menu.foods? %}
    {% for food in menu.foods %}
      {% assign_prices_to prices for food in menu %}
      {% include 'food' with food:food, menu:menu %}
    {% endfor %}
  {% endif %}

  {% if menu.children? %}
    {% for child in menu.children %}
      {% if child.foods? %}
        {% for food in child.foods %}
          {% assign relative_menu = food.menu %}
          {% assign_prices_to prices for food in relative_menu %}
          <a href="{{ relative_menu.url }}">
            {% include 'food' with food:food, menu:relative_menu %}
          </a>
        {% endfor %}
      {% endif %}

      {% if child.children? %}
        {% for child in child.children %}
          {% if child.foods? %}
            {% for food in child.foods %}
              {% assign relative_menu = food.menu %}
              {% assign_prices_to prices for food in relative_menu %}
              <a href="{{ relative_menu.url }}">
                {% include 'food' with food:food, menu:relative_menu %}
              </a>
            {% endfor %}
          {% endif %}
        {% endfor %}
      {% endif %}
    {% endfor %}
  {% endif %}
</section>