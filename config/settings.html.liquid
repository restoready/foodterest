<div class="tabs-wrapper">
  <input checked="checked" class="tab-head" id="tab1" name="tab" type="radio">
  <label for="tab1">
    Couleurs
  </label>
  <input class="tab-head" id="tab2" name="tab" type="radio">
  <label for="tab2">
    Polices
  </label>
  <input class="tab-head" id="tab3" name="tab" type="radio">
  <label for="tab3">
    Modules
  </label>
  <input class="tab-head" id="tab4" name="tab" type="radio">
  <label for="tab4">
    Images
  </label>

  <div class="tab-body-wrapper">
    <div class="tab-body" id="tab-body-1">
      <fieldset>
        <legend>Général</legend>
        <div class="row">
          <div class="columns medium-4 large-3">
            <label for="body-background">Fond de page</label>
            <input name="admin_theme_settings[body-background]" id="body-background" value="{{ theme_settings.body-background }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="body-color">Couleur par défaut du texte</label>
            <input name="admin_theme_settings[body-color]" id="body-color" value="{{ theme_settings.body-color }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="accent-color">Couleur d'accent</label>
            <input name="admin_theme_settings[accent-color]" id="accent-color" value="{{ theme_settings.accent-color }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="font-color-on-accent-background">Texte sur fond couleur accent</label>
            <input name="admin_theme_settings[font-color-on-accent-background]" id="font-color-on-accent-background" value="{{ theme_settings.font-color-on-accent-background }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3 end">
            <label for="font-color-on-photo">Texte sur photo</label>
            <input name="admin_theme_settings[font-color-on-photo]" id="font-color-on-photo" value="{{ theme_settings.font-color-on-photo }}" type="text" class="minicolors">
          </div>
        </div>
      </fieldset>
      <fieldset>
        <legend>Navigation</legend>
        <div class="row">
          <div class="columns medium-4 large-3">
            <label for="nav-background">Fond</label>
            <input name="admin_theme_settings[nav-background]" id="nav-background" value="{{ theme_settings.nav-background }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3 end">
            <label for="nav-font-color">Texte</label>
            <input name="admin_theme_settings[nav-font-color]" id="nav-font-color" value="{{ theme_settings.nav-font-color }}" type="text" class="minicolors">
          </div>
        </div>
      </fieldset>
      <fieldset>
        <legend>Cartes</legend>
        <div class="row">
          <div class="columns medium-4 large-3">
            <label for="card-background">Fond</label>
            <input name="admin_theme_settings[card-background]" id="card-background" value="{{ theme_settings.card-background }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="card-font-color">Texte</label>
            <input name="admin_theme_settings[card-font-color]" id="card-font-color" value="{{ theme_settings.card-font-color }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="card-background-hover">Survol carte fond</label>
            <input name="admin_theme_settings[card-background-hover]" id="card-background-hover" value="{{ theme_settings.card-background-hover }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="summary-color">Texte description des plats</label>
            <input name="admin_theme_settings[summary-color]" id="summary-color" value="{{ theme_settings.summary-color }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3 end">
            <label for="food-price-value-color">Texte valeur prix</label>
            <input name="admin_theme_settings[food-price-value-color]" id="food-price-value-color" value="{{ theme_settings.food-price-value-color }}" type="text" class="minicolors">
          </div>
        </div>
      </fieldset>
      <fieldset>
        <legend>Tags</legend>
        <div class="row">
          <div class="columns medium-4 large-3">
            <label for="tag-vegetarian-background">Végétarien : fond</label>
            <input name="admin_theme_settings[tag-vegetarian-background]" id="tag-vegetarian-background" value="{{ theme_settings.tag-vegetarian-background }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="tag-vegetarian-font-color">Végétarien : texte</label>
            <input name="admin_theme_settings[tag-vegetarian-font-color]" id="tag-vegetarian-font-color" value="{{ theme_settings.tag-vegetarian-font-color }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="tag-news-background">Nouveauté : fond</label>
            <input name="admin_theme_settings[tag-news-background]" id="tag-news-background" value="{{ theme_settings.tag-news-background }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="tag-news-font-color">Nouveauté : texte</label>
            <input name="admin_theme_settings[tag-news-font-color]" id="tag-news-font-color" value="{{ theme_settings.tag-news-font-color }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="tag-no-meat-background">Sans-viandes : fond</label>
            <input name="admin_theme_settings[tag-no-meat-background]" id="tag-no-meat-background" value="{{ theme_settings.tag-no-meat-background }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="tag-no-meat-font-color">Sans-viandes : texte</label>
            <input name="admin_theme_settings[tag-no-meat-font-color]" id="tag-no-meat-font-color" value="{{ theme_settings.tag-no-meat-font-color }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="tag-no-pork-background">Sans-porc : fond</label>
            <input name="admin_theme_settings[tag-no-pork-background]" id="tag-no-pork-background" value="{{ theme_settings.tag-no-pork-background }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="tag-no-pork-font-color">Sans-porc : texte</label>
            <input name="admin_theme_settings[tag-no-pork-font-color]" id="tag-no-pork-font-color" value="{{ theme_settings.tag-no-pork-font-color }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="tag-no-alcohol-background">Sans-alcool : fond</label>
            <input name="admin_theme_settings[tag-no-alcohol-background]" id="tag-no-alcohol-background" value="{{ theme_settings.tag-no-alcohol-background }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3 end">
            <label for="tag-no-alcohol-font-color">Sans-alcool : texte</label>
            <input name="admin_theme_settings[tag-no-alcohol-font-color]" id="tag-no-alcohol-font-color" value="{{ theme_settings.tag-no-alcohol-font-color }}" type="text" class="minicolors">
          </div>
        </div>
      </fieldset>
    </div>

    <div class="tab-body" id="tab-body-2">
      <fieldset>
        <legend>Polices</legend>
        <div class="row">
          <div class="columns">
            <p>Si vous utilisez une ou plusieurs polices du service Google Fonts, indiquez dans ce champ le code fourni par Google. Lorsque vous êtes à l'étape "Use" sur Google Fonts, le point "3. Add this code to your website:" affiche un tag &lt;link&gt;. Copiez tout le code et collez-le ici.</p>
            <label for="google-fonts-link">Google Fonts : tag &lt;link&gt;</label>
            <input type="text" id="google-fonts-link" name="admin_theme_settings[google-fonts-link]" value="{{ theme_settings.google-fonts-link | escape_once }}" placeholder="&lt;link href='http://fonts.googleapis.com/css?family=...">
          </div>
        </div>
        <div class="row">
          <div class="columns large-6">
            <label for="body-font">Corps de texte</label>
            <input type="text" id="body-font" name="admin_theme_settings[body-font]" value="{{ theme_settings.body-font }}">
            <span>Indiquez le nom de la police seulement, ou bien la font stack</span>
          </div>
          <div class="columns large-6">
            <label for="header-font">Titres</label>
            <input type="text" id="header-font" name="admin_theme_settings[header-font]" value="{{ theme_settings.header-font }}">
            <span>Indiquez le nom de la police seulement, ou bien la font stack</span>
          </div>
        </div>
      </fieldset>
    </div>

    <div class="tab-body" id="tab-body-3">
      <fieldset>
        <legend>Communication</legend>
        <div class="columns">
            <input class="icheck-me" name="admin_theme_settings[display_newsletter]" id="display_newsletter" type="checkbox" value="{{ theme_settings.display_newsletter }}" {% if theme_settings.display_newsletter %}checked{% endif %} data-skin='black-green' checked/>
          <label style="margin-right:.5em;" for="display_newsletter">Afficher la newsletter</label>
        </div>
      </fieldset>

      <fieldset>
        <legend>Carte Google</legend>
        <div class="columns">
          <input class="icheck-me" name="admin_theme_settings[google_map_type]" id="radio_google_none" type="radio" value="" data-skin='black-green' {% if theme_settings.google_map_type == "" %}checked{% endif %}/>
          <label style="margin-right:.5em;" for="radio_google_none">Ne pas afficher la carte</label>
          <input class="icheck-me" name="admin_theme_settings[google_map_type]" id="radio_google_map_image" type="radio" value="image" data-skin='black-green' {% if theme_settings.google_map_type == "image" %}checked{% endif %}/>
          <label style="margin-right:.5em;" for="radio_google_map_image">Afficher la carte sous forme d'image</label>
          <input class="icheck-me" name="admin_theme_settings[google_map_type]" id="radio_google_map_embed" type="radio" value="embed" data-skin='black-green' {% if theme_settings.google_map_type == "embed" %}checked{% endif %}/>
          <label style="margin-right:.5em;" for="radio_google_map_embed">Afficher la carte interactive</label>
        </div>
      </fieldset>

      <fieldset>
        <legend>
          Visite virtuelle
          <a class="small dropdown" data-options="align:top" data-dropdown="informations-link" style="display:inline;width:25px;text-align:center;">
            &nbsp<i class="fa fa-info"></i>&nbsp
          </a>
          <div class="f-dropdown content info" id="informations-link" data-dropdown-content="">
            <p>
              Où trouver vos informations ? <a target="blank" href='https://www.google.com/maps?output=classic'>google.com/maps?output=classic</a>
            </p>
            <img src="/assets/business-view-info.jpg">
          </div>
        </legend>
        <div class="columns large-6">
          <div class="row">
            <div class="columns">
              <input class="icheck-me" name="admin_theme_settings[display_google_business_view_embed]" id="display_google_business_view_embed" type="checkbox" value="{{ theme_settings.display_google_business_view_embed }}" data-skin='black-green' {% if theme_settings.display_google_business_view_embed %}checked{% endif %}/>
            <label style="margin-right:.5em;" for="display_google_business_view_embed">Afficher la visite virtuelle</label>
            </div>
          </div>

          <div class="row">
            <div class="columns">
              <label class="left" for="google_business_view_embed">Code HTML</label>
              <input name="admin_theme_settings[google_business_view_embed]" type="text" id="google_business_view_embed" value="{{ theme_settings.google_business_view_embed | escape_once }}" />
            </div>
          </div>
        </div>

        <div class="columns large-6">
          <div class="row">
            <div class="columns">
              <input class="icheck-me" name="admin_theme_settings[display_google_business_view_url]" id="display_google_business_view_url" type="checkbox" value="{{ theme_settings.display_google_business_view_url }}" data-skin='black-green' {% if theme_settings.display_google_business_view_url %}checked{% endif %}/>
              <label style="margin-right:.5em;" for="display_google_business_view_url">Afficher le lien</label>
            </div>
          </div>

          <div class="row">
            <div class="columns">
              <label class="left" for="google_business_view_url">Url</label>
              <input name="admin_theme_settings[google_business_view_url]" type="text" id="google_business_view_url" value="{{ theme_settings.google_business_view_url }}" />
            </div>
          </div>
        </div>
      </fieldset>
    </div>

    <div class="tab-body" id="tab-body-4">
      <fieldset>
        <legend>Page d'accueil</legend>
        <div class="row">
          <div class="medium-4 large-3 columns">
            <div class="large-11">
              <label for="home-image-opening-hours">Image horaire d'ouverture</label>
            </div>
            <div class="large-11">
              {% if theme_settings.home-image-opening-hours %}
              <input class="icheck-me" name="admin_theme_settings[home-image-opening-hours]" id="home-image-opening-hours" type="checkbox" value="{{ theme_settings.home-image-opening-hours }}" data-skin='black-green' checked/>
              {% else %}
              <input class="icheck-me" name="admin_theme_settings[home-image-opening-hours]" id="home-image-opening-hours" type="checkbox" value="{{ theme_settings.home-image-opening-hours }}" data-skin='black-green' />
              {% endif %}
              <label for="home-image-opening-hours">Afficher l'image</label>
            </div>

            <div class="large-11">
              <div id="plupload-home-image-opening-hours" class="input-file input-file-asset">
                <input name="admin_theme_settings[assets][home-image-opening-hours.jpg]" type="file"/>
              </div>
            </div>

            <div class="large-11 preview">
              <div class="filelist">
                {{ 'home-image-opening-hours.jpg' | asset_url | image_tag }}
              </div>
            </div>
          </div>
          <div class="medium-4 large-3 columns end">
            <div class="large-11">
              <label for="home-image-directions">Image directions</label>
            </div>
            <div class="large-11">
              {% if theme_settings.home-image-directions %}
              <input class="icheck-me" name="admin_theme_settings[home-image-directions]" id="home-image-directions" type="checkbox" value="{{ theme_settings.home-image-directions }}" data-skin='black-green' checked/>
              {% else %}
              <input class="icheck-me" name="admin_theme_settings[home-image-directions]" id="home-image-directions" type="checkbox" value="{{ theme_settings.home-image-directions }}" data-skin='black-green' />
              {% endif %}
              <label for="home-image-directions">Afficher l'image</label>
            </div>

            <div class="large-11">
              <div id="plupload-home-image-directions" class="input-file input-file-asset">
                <input name="admin_theme_settings[assets][home-image-directions.jpg]" type="file"/>
              </div>
            </div>

            <div class="large-11 preview">
              <div class="filelist">
                {{ 'home-image-directions.jpg' | asset_url | image_tag }}
              </div>
            </div>
          </div>
        </div>
      </fieldset>
    </div>

  </div>
</div>
